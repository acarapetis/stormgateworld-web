---
import Layout from "../layouts/Layout.astro"
import Card from "../components/Card.astro"
import type { Content } from "../lib/content"

const stormgateWorldToolsContent: Content[] = [
  {
    title: "Streamer Overlay",
    description: "A tool for streamers to display information about ongoing games in their broadcasts.",
    url: "https://github.com/stormgateworld/overlay",
    image_url: "https://raw.githubusercontent.com/stormgateworld/overlay/main/Preview.png"
  }
]

---

<Layout title="Tools">
  <div class="w-full bg-gray-800/50 backdrop-blur-lg border-b border-gray-700/50">
    <div class="mx-auto max-w-screen-md px-4 md:px-0 py-8 gap-4 flex items-center flex-wrap justify-between">
      <h3 class="flex-auto text-center font-display text-4xl font-bold text-white">
          Stormgate World Tools
      </h3>
    </div>
  </div>
  <div class="mx-auto w-full py-4 md:py-8 px-8 sm:px-16 md:px-32">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {stormgateWorldToolsContent.map((c) => <Card data={c} />)}
    </div>
  </div>
</Layout>
